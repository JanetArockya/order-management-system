# Order Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# ================================
# FRONTEND CONFIGURATION
# ================================

# API Base URL (change to your backend URL)
REACT_APP_API_URL=http://localhost:8080

# Environment
REACT_APP_ENV=development

# ================================
# BACKEND CONFIGURATION  
# ================================

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=local

# ================================
# AWS CONFIGURATION
# ================================

# AWS Credentials (for production use IAM roles instead)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=Orders
DYNAMODB_ENDPOINT=https://dynamodb.us-east-1.amazonaws.com

# S3 Configuration
S3_BUCKET_NAME=order-management-invoices
S3_REGION=us-east-1

# SNS Configuration
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:order-notifications

# ================================
# DATABASE CONFIGURATION
# ================================

# For local development (if using SQL database)
# DATABASE_URL=jdbc:postgresql://localhost:5432/orders
# DATABASE_USERNAME=your_db_username
# DATABASE_PASSWORD=your_db_password

# ================================
# SECURITY CONFIGURATION
# ================================

# JWT Configuration (if implementing authentication)
# JWT_SECRET=your_jwt_secret_key_here
# JWT_EXPIRATION=86400

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ================================
# FILE UPLOAD CONFIGURATION
# ================================

# Maximum file size (in MB)
MAX_FILE_SIZE=10

# Allowed file types
ALLOWED_FILE_TYPES=application/pdf

# Upload directory for local storage
UPLOAD_DIR=./uploads

# ================================
# LOGGING CONFIGURATION
# ================================

# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=./logs/application.log

# ================================
# MONITORING & HEALTH CHECKS
# ================================

# Health check endpoints
HEALTH_CHECK_ENABLED=true

# Metrics collection
METRICS_ENABLED=true

# ================================
# DEVELOPMENT CONFIGURATION
# ================================

# Enable development features
DEBUG_MODE=true

# Hot reload for development
HOT_RELOAD=true

# API Documentation
SWAGGER_ENABLED=true

# ================================
# PRODUCTION CONFIGURATION
# ================================

# For production deployment
# PRODUCTION_URL=https://your-production-domain.com
# SSL_ENABLED=true
# SECURITY_HEADERS_ENABLED=true

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================

# Email service (for notifications)
# EMAIL_SERVICE_API_KEY=your_email_service_key
# EMAIL_FROM_ADDRESS=noreply@yourdomain.com

# Analytics (if using)
# ANALYTICS_API_KEY=your_analytics_key

# Error tracking (if using Sentry, etc.)
# ERROR_TRACKING_DSN=your_error_tracking_dsn
